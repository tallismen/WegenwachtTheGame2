<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hv.anwb.nl.wegenwachtthegame2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/wegenwacht"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="hv.anwb.nl.wegenwachtthegame2.SettingsActivity"
            android:configChanges="orientation"
            android:label="Preferences"
            android:parentActivityName="hv.anwb.nl.wegenwachtthegame2.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hv.anwb.nl.wegenwachtthegame2.MainActivity" />
        </activity>
    </application>

</manifest>