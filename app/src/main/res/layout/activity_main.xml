<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="hv.anwb.nl.wegenwachtthegame2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pechgeval Wins:"
                android:textColor="@color/anwbDonkerBlauw"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pechgevalWinsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/anwbDonkerBlauw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wegenwacht Wins:"
                android:textColor="@color/anwbDonkerBlauw"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wegenwachtWinsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/anwbDonkerBlauw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gelijkspel:"
                android:textColor="@color/anwbDonkerBlauw"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gelijkspelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/anwbDonkerBlauw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="170dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beurt:"
                android:textColor="@color/anwbDonkerBlauw"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="81dp" />

            <Button
                android:id="@+id/beurtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/anwbWit"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <TextView
                android:id="@+id/laatstgewonnen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laatstgewonnen:"
                android:textColor="@color/anwbDonkerBlauw"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="81dp" />

            <Button
                android:id="@+id/gewonnenView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/anwbWit"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@color/anwbDonkerBlauw"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/links_boven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/midden_boven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/rechts_boven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/links_midden"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/midden_midden"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/rechts_midden"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/links_onder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/midden_onder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/rechts_onder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_leeg"
                android:padding="50dp"
                android:text="3"
                android:textColor="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:onClick="clearPlayAreaButtonPressed"
            android:text="Opniew"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:onClick="resetButtonPressed"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
